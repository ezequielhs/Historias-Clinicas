@model IEnumerable<Historias_Clinicas_D.Models.Nota>

@{
    ViewData["Title"] = "Index";
}

<h1>Notas</h1>

<p>
    <a class="btn btn-primary" role="button" asp-action="Create">Agregar Nota</a>
</p>
<table class="table">
    <thead>
        <tr class="table-dark">
            <th>
                @Html.DisplayNameFor(model => model.EvolucionId)
            </th>
            <th>
                Cargado por
            </th>
            <th>
                Nota
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class=table-secondary>
            <td>
                @Html.DisplayFor(modelItem => item.Evolucion.DescripcionAtencion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empleado.NombreCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mensaje)
            </td>
            <td>
                <a class="btn btn-primary" role="button" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a class="btn btn-primary" role="button" asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                <a class="btn btn-danger" role="button" asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
