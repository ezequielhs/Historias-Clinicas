@model Historias_Clinicas_D.Models.Nota

@{
    ViewData["Title"] = "Edit";
}

<h4>Nota</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EvolucionId" />
            <input type="hidden" asp-for="EmpleadoId" />
            <div class="form-group">
                <dl class="row"> 
                    <dd>
                        <textarea asp-for="Mensaje" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Mensaje" class="text-danger"></span>
                        <hr />
                    </dd>
                </dl>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" /> |
                <a class="btn btn-secondary" role="button" onclick="history.go(-1)">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
