@model Historias_Clinicas_D.Models.Paciente

@{
    ViewData["Title"] = "Historia Clinica";
}

<h1>Historia Clínica</h1>

<div>
    @if (Model.Episodios.Count > 0)
    {
        @if (this.User.IsInRole(Constantes.RolEmpleado))
        {
            <p>
                <a class="btn btn-primary" role="button" asp-controller="Episodios" asp-action="Create" asp-route-returnUrl="/Pacientes/HistoriaClinica/@Model?.Id">Agregar Episodio</a>
            </p>
        }
        <table class="table">
        <thead>
            <tr class="table-dark">
                <th>
                    @Alias.Motivo
                </th>
                <th>
                    @Alias.FechaYHoraInicio
                </th>
                <th>
                    @Alias.EstadoAbierto
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Episodios) {
                <tr class=table-secondary>
                    <td>
                        @Html.DisplayFor(modelItem => item.Motivo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaYHoraInicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EstadoAbierto)
                    </td>
                    <td>                      
                        @if (this.User.IsInRole(Constantes.RolMedico))
                        {
                            <div>
                                <a class="btn btn-primary" role="button" asp-action="Details" asp-route-id="@item.Id">Detalles</a> |
                            </div>
                            <div>
                                <a class="btn btn-danger" role="button" asp-controller="Episodios" asp-action="CerrarEpisodio" asp-route-id="@item.Id">Cerrar Episodio</a>
                            </div>
                        }
                        else
                        {
                            <div>
                                <a class="btn btn-primary" role="button" asp-action="Details" asp-route-id="@item.Id">Detalles</a>
                            </div>    
                        }
                    </td>
                </tr>
        }
        </tbody>
        </table>
    }
    else
    {
        <p>No tiene asignado ningun Episodio.</p>
        @if (this.User.IsInRole(Constantes.RolEmpleado))
        {
            <p>
                <a class="btn btn-primary" role="button" asp-controller="Episodios" asp-action="Create" asp-route-returnUrl="/Pacientes/HistoriaClinica/@Model?.Id">Agregar Episodio</a>
            </p>
        }
    }
</div>
<div>  
    <a class="btn btn-secondary" role="button" onclick="history.go(-1)">Volver</a>
</div>