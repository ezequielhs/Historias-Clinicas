@using Historias_Clinicas_D.Helpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Centro Médico San Nicolás</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-darkly.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Historias_Clinicas_D.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
          <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/img/logo-home.png" alt="logo">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <a class="btn btn-light" role="button" asp-controller="Home" asp-action="Nosotros">Nosotros</a>&ensp;
            <a class="btn btn-light" role="button" asp-controller="Cartilla" asp-action="Index">Cartilla Médica</a>&ensp;
            <a class="btn btn-light" role="button" asp-controller="Home" asp-action="CargarBD">Cargar BD</a>
            <div class="collapse navbar-collapse d-sm-inline-flex flex-sm-row-reverse" id="navbarColor01">
              <ul class="navbar-nav d-flex justify-content-end">
                @if (User.Identity.IsAuthenticated)
                {
                    @if (this.User.IsInRole(Constantes.RolAdmin))
                    {
                        <li class="nav-item">
                          <a class="nav-link" asp-controller="Pacientes" asp-action="Index">Pacientes</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" asp-controller="Empleados" asp-action="Index">Empleados</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" asp-controller="Medicos" asp-action="Index">Medicos</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" asp-controller="Episodios" asp-action="Index">Episodios</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" asp-controller="Evoluciones" asp-action="Index">Evoluciones</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" asp-controller="Notas" asp-action="Index">Notas</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" asp-controller="Epicrisis" asp-action="Index">Epicrisis</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" asp-controller="Direcciones" asp-action="Index">Direcciones</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" asp-controller="Telefonos" asp-action="Index">Telefonos</a>
                        </li>
                        <li class="nav-item">
                          <a class="btn btn-info" role="button" asp-controller="Empleados" asp-action="Details" asp-route-id="@_userManager.GetUserId(this.User)">Mis Datos</a>&ensp;
                        </li>
                    }
                    else if (this.User.IsInRole(Constantes.RolProfesional))
                    {
                        <li class="nav-item">
                          <a class="nav-link" asp-controller="Pacientes" asp-action="Index">Pacientes</a>
                        </li>
                        <li class="nav-item">
                          <a class="btn btn-info" role="button" asp-controller="Medicos" asp-action="Details" asp-route-id="@_userManager.GetUserId(this.User)">Mis Datos</a>&ensp;
                        </li>        
                    }
                    else if (this.User.IsInRole(Constantes.RolAdministrativo))
                    {
                        <li class="nav-item">
                          <a class="nav-link" asp-controller="Pacientes" asp-action="Index">Pacientes</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" asp-controller="Empleados" asp-action="Index">Empleados</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" asp-controller="Medicos" asp-action="Index">Medicos</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" asp-controller="Episodios" asp-action="Index">Episodios</a>
                        </li>
                        <li class="nav-item">
                          <a class="btn btn-info" role="button" asp-controller="Empleados" asp-action="Details" asp-route-id="@_userManager.GetUserId(this.User)">Mis Datos</a>&ensp;
                        </li>
                    }
                    else if (this.User.IsInRole(Constantes.RolPaciente))
                    {
                        <li class="nav-item">
                          <a class="btn btn-info" role="button" asp-controller="Pacientes" asp-action="Details" asp-route-id="@_userManager.GetUserId(this.User)">Mis Datos</a>&ensp;
                        </li>
                    }
                    <li>
                        <div class="btn-group" role="group">
                          <button type="button" class="btn btn-secondary">Cuenta</button>
                          <div class="btn-group" role="group">
                            <button id="btnGroupDrop3" type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="btnGroupDrop3" style="">
                              <a class="dropdown-item bg-danger" asp-controller="Account" asp-action="CerrarSesion">Cerrar Sesión</a>
                              <div class="dropdown-divider"></div>
                              <a class="dropdown-item" href="#">@this.User.Identity.Name</a>
                            </div>
                          </div>
                        </div>
                    </li>  
                }
                else
                {
                    <li>
                        <a class="btn btn-secondary" role="button" asp-controller="Account" asp-action="Registrarse">Registrarse</a> |
                        <a class="btn btn-secondary" role="button" asp-controller="Account" asp-action="IniciarSesion">Iniciar Sesion</a>
                    </li>
                }
              </ul>
            </div>
          </div>
        </nav>
    </header>
    <br />
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2022 - Centro Médico San Nicolás
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
