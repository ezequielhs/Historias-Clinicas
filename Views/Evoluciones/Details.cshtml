@model Historias_Clinicas_D.Models.Evolucion

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>Evolucion</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Medico)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Medico.NombreCompleto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaYHoraInicio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaYHoraInicio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaYHoraAlta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaYHoraAlta)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaYHoraCierre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaYHoraCierre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DescripcionAtencion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescripcionAtencion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoAbierto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstadoAbierto)

    </dl>
</div>

<div>
    <a class="btn btn-primary" role="button" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a> |
    <a class="btn btn-secondary" role="button" asp-action="Index">Volver</a>
</div>

<br />
<h4>Notas</h4>
<hr />
@foreach (Nota nota in Model.Notas){
    <table class = "table">
         <thead>
            <tr class="table-dark">
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    Cargado por
                </th>
                <th>
                    Nota
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr class=table-secondary>
            <td>
                @Html.DisplayFor(modelNota => nota.Empleado.NombreCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelNota => nota.FechaYHora)
            </td>
            <td>
                @Html.DisplayFor(modelNota => nota.Mensaje)
            </td>
            <td>
               <a class="btn btn-primary" role="button" asp-controller="Notas" asp-action="Details" asp-route-id="@nota.Id">Ir a Nota</a> 
            </td>
            </tr>
       </tbody>
    </table>
}



