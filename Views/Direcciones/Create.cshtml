@model Historias_Clinicas_D.Models.Direccion

@{
    ViewData["Title"] = "Create";
}

@if(Enumerable.Count(ViewBag.PersonaId) > 0)
{
    <h4>Direccion</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Calle" class="control-label"></label>
                    <input asp-for="Calle" class="form-control" />
                    <span asp-validation-for="Calle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Numero" class="control-label"></label>
                    <input asp-for="Numero" class="form-control" />
                    <span asp-validation-for="Numero" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CodigoPostal" class="control-label"></label>
                    <input asp-for="CodigoPostal" class="form-control" />
                    <span asp-validation-for="CodigoPostal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Localidad" class="control-label"></label>
                    <input asp-for="Localidad" class="form-control" />
                    <span asp-validation-for="Localidad" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Provincia" class="control-label"></label>
                    <select asp-for="Provincia" class="form-control" asp-items="Html.GetEnumSelectList<Provincia>()"></select>
                    <span asp-validation-for="Provincia" class="text-danger"></span>
                </div>
                @if (ViewBag.Persona == null)
                {
                    <div class="form-group">
                        <label asp-for="PersonaId" class="control-label"></label>
                        <select asp-for="PersonaId" class="form-control" asp-items="ViewBag.PersonaId"></select>
                    </div>
                }
                else
                {
                    <input asp-for="PersonaId" class="form-control" type="hidden" value="@ViewBag.Persona">
                }
                <br />
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary" /> |
                    <a class="btn btn-secondary" role="button" onclick="history.go(-1)">Volver</a>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <h4>No hay Personas registradas para asociar una nueva Dirección.</h4>
    <a class="btn btn-secondary" role="button" asp-action="Index">Volver</a>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
