@model Historias_Clinicas_D.Models.Telefono

@{
    ViewData["Title"] = "Delete";
}

<h3>¿Está seguro que desea eliminar el siguiente Teléfono?</h3>
<div>
    <h4>Teléfono</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Caracteristica)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Caracteristica)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Numero)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Numero)
