@model Historias_Clinicas_D.Models.Telefono

@{
    ViewData["Title"] = "Create";
}

@if(Enumerable.Count(ViewBag.PersonaId) > 0)
{
    <h4>Teléfono</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Caracteristica" class="control-label"></label>
                    <input asp-for="Caracteristica" class="form-control" />
                    <span asp-validation-for="Caracteristica" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Numero" class="control-label"></label>
                    <input asp-for="Numero" class="form-control" />
                    <span asp-validation-for="Numero" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tipo" class="control-label"></label>
                    <select asp-for="Tipo" class="form-control" asp-items="Html.GetEnumSelectList<TipoTelefono>()"></select>
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PersonaId" class="control-label"></label>
                    <select asp-for="PersonaId" class ="form-control" asp-items="ViewBag.PersonaId"></select>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary" /> |
                    <a class="btn btn-secondary" role="button" href="#" onclick="history.go(-1)">Volver</a>
                </div>
            </form>
        </div>
    </div>
}
else
{
    <h4>No hay Personas registradas para asociar un nuevo Teléfono.</h4>
    <a class="btn btn-secondary" role="button" asp-action="Index">Volver</a>
}


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
