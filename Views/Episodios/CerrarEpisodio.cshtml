@model Historias_Clinicas_D.Models.Episodio

@{
    ViewData["Title"] = "Cerrar Episodio";
}

<h4>Episodio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CerrarEpisodio">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Motivo" />
            <input type="hidden" asp-for="Descripcion" />
            <input type="hidden" asp-for="PacienteId" />
            <input type="hidden" asp-for="EmpleadoRegistraId" />
            <input type="hidden" asp-for="FechaYHoraCierre" value="@Constantes.FechaActual"/>
            <input type="hidden" asp-for="EstadoAbierto" value="@false"/>
            <div class="form-group">
                <label asp-for="FechaYHoraAlta" class="control-label"></label>
                <input asp-for="FechaYHoraAlta" class="form-control" rows="5">
                <span asp-validation-for="FechaYHoraAlta" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Cerrar Episodio" class="btn btn-danger" /> |
                <a class="btn btn-secondary" role="button" onclick="history.go(-1)">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}